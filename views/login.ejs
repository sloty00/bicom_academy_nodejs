<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Acceso a Bicom Academy</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/signin.css" rel="stylesheet">
    
  </head>
  <body class="text-center">
    <main class="form-signin text-center shadow-lg p3 mb-5">
      <form id="form_login" action="/login" method="POST">
        <img class="mb-4" src="img/logo_bicom.png" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Acceso</h1>

        <div class="form-floating">
          <input type="text" class="form-control" id="user", name="user" placeholder="Nombre Usuario">
          <label for="user">Cuenta Usuario</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="pass", name="pass" placeholder="Password">
          <label for="pass">Contrase√±a</label>
        </div>

        <div class="checkbox mb-3">
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      </form>
      <br>
      <a href="/register" type="button" class="w-100 btn btn-lg btn-primary">Registrarse</a>
    </main>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) { %>
      <script>
        Swal.fire({
          title: '<%= alertTitle %>',
          text:'<%= alertMessage %>',
          icon:'<%= alertIcon %>',
          showConfirmButton: <%= showConfirmButton %>,
          timer: <%= timer %>
        }).then(()=>{
          window.location = '/<%= ruta %>'
        })
      </script>
    <% } %>
  </body>
</html>