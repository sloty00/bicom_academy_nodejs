  <body class="text-center">
    <main class="form-signin text-center shadow-lg p3 mb-5"><br>
      <img class="mb-4" src="img/logo_bicom.png" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal">Acceso</h1>
    </br>
      <form id="form_login" action="/login" method="POST">
        <div class="form-floating">
          <input type="text" class="form-control" id="user", name="user" placeholder="Nombre Usuario">
          <label for="user">Cuenta Usuario</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="pass", name="pass" placeholder="Password">
          <label for="pass">Contrase√±a</label>
        </div>

        <div class="checkbox mb-3">
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
        <button id="googleLogin" class="w-100 btn btn-lg btn-secondary" type="button">Login con Google</button>
        <button id="facebookLogin" class="w-100 btn btn-lg btn-secondary" type="button">Login con Facebook</button>
      </form>
      <a href="/register" type="button" class="w-100 btn btn-lg btn-primary">Registrarse</a>
    </main>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) { %>
      <script>
        Swal.fire({
          title: '<%= alertTitle %>',
          text:'<%= alertMessage %>',
          icon:'<%= alertIcon %>',
          showConfirmButton: <%= showConfirmButton %>,
          timer: <%= timer %>
        }).then(()=>{
          window.location = '/<%= ruta %>'
        })
      </script>
    <% } %>

